---
layout: default
---

<!-- Custom styles for recognition page -->
<style>
.recognition-photo {
  height: 250px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.recognition-photo:hover {
  transform: scale(1.05);
}

.recognition-card {
  transition: box-shadow 0.3s ease;
  margin-bottom: 1rem;
  background-color: var(--global-card-bg-color);
  border: 1px solid var(--global-divider-color);
}

.recognition-card:hover {
  box-shadow: 0 8px 16px rgba(0,0,0,0.15);
}

.award-section {
  margin-bottom: 3rem;
}

.award-header {
  border-bottom: 2px solid var(--global-theme-color);
  padding-bottom: 0.5rem;
  margin-bottom: 2rem;
}

.award-title {
  color: var(--global-theme-color);
  font-weight: 600;
}

.award-date {
  color: var(--global-text-color-light);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.award-description {
  color: var(--global-text-color);
  font-style: italic;
  margin-bottom: 0;
}

.recognition-caption {
  color: var(--global-text-color);
  font-size: 0.85rem;
  line-height: 1.3;
}

/* Dark mode specific adjustments */
html[data-theme="dark"] .recognition-card:hover {
  box-shadow: 0 8px 16px rgba(255,255,255,0.1);
}

.recognition-grid {
  column-count: 3;
  column-gap: 1.5rem;
  margin-top: 1rem;
}

.recognition-card {
  display: inline-block;
  width: 100%;
  margin-bottom: 1.5rem;
  break-inside: avoid;
  page-break-inside: avoid;
}

.recognition-card-no-image {
  height: fit-content;
}

@media (max-width: 992px) {
  .recognition-grid {
    column-count: 2;
  }
}

@media (max-width: 768px) {
  .recognition-grid {
    column-count: 2;
    column-gap: 1rem;
  }
  
  .recognition-card {
    margin-bottom: 1rem;
  }
  
  .recognition-photo {
    height: 200px;
  }
}

@media (max-width: 576px) {
  .recognition-grid {
    column-count: 1;
    column-gap: 0;
  }
  
  .recognition-photo {
    height: 180px;
  }
}
</style>

<!-- Page content (from markdown) -->
{{ content }}

<!-- Recognition display -->
<div class="recognition-container">
  {% assign sorted_categories = site.data.recognition | group_by: "category" %}
  
  {% for category_group in sorted_categories %}
      
      {% if category_group.items.size > 0 %}
        {% assign sorted_items = category_group.items | sort: "year" | reverse %}
        <div class="recognition-grid">
          {% for item in sorted_items %}
            {% if item.image %}
              <div class="card recognition-card h-100">
                <div class="position-relative overflow-hidden">
                  <img src="{{ item.image | relative_url }}" 
                       class="card-img-top recognition-photo" 
                       alt="{{ item.name }} - {{ item.award }}"
                       loading="lazy">
                </div>
            {% else %}
              <div class="card recognition-card recognition-card-no-image">
            {% endif %}
              <div class="card-body d-flex flex-column">
                {% if item.url %}
                  <h6 class="card-title mb-1 text-primary">
                    <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.name }}</a>
                  </h6>
                {% else %}
                  <h6 class="card-title mb-1 text-primary">{{ item.name }}</h6>
                {% endif %}
                <p class="recognition-caption card-text flex-grow-1">{{ item.award }}</p>
                {% if item.co_inventors %}
                  <small class="text-muted mb-2">Co-inventors: {{ item.co_inventors }}</small>
                {% endif %}
                {% if item.year %}
                  <div class="mt-auto">
                    <small class="text-muted">
                      <i class="fas fa-calendar-alt"></i> {{ item.year }}
                    </small>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i>
          No {{ category_group.name | downcase }}s recorded yet.
        </div>
      {% endif %}
    </div>
  {% endfor %}
  
  {% if site.data.recognition.size == 0 %}
    <div class="text-center py-5">
      <div class="alert alert-secondary">
        <i class="fas fa-award"></i>
        <h4>No recognition recorded yet</h4>
        <p>Check back soon for updates on our achievements!</p>
      </div>
    </div>
  {% endif %}
</div>

<!-- Optional: Add modal for full-size image viewing -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">Recognition</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalImage" src="" class="img-fluid" alt="">
        <p id="modalCaption" class="mt-2 text-muted"></p>
      </div>
    </div>
  </div>
</div>

<script>
// Add click handlers for image modal (optional enhancement)
document.addEventListener('DOMContentLoaded', function() {
  const recognitionPhotos = document.querySelectorAll('.recognition-photo');
  const modal = new bootstrap.Modal(document.getElementById('imageModal'));
  const modalImage = document.getElementById('modalImage');
  const modalCaption = document.getElementById('modalCaption');
  
  recognitionPhotos.forEach(function(photo) {
    photo.addEventListener('click', function() {
      modalImage.src = this.src;
      modalImage.alt = this.alt;
      modalCaption.textContent = this.alt;
      modal.show();
    });
    
    // Add pointer cursor to indicate clickability
    photo.style.cursor = 'pointer';
  });
});
</script>