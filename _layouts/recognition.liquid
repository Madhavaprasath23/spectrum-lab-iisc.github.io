---
layout: default
---

<!-- Custom styles for recognition page -->
<style>
.recognition-photo {
  height: 250px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.recognition-photo:hover {
  transform: scale(1.05);
}

.recognition-card {
  transition: box-shadow 0.3s ease;
  margin-bottom: 1rem;
  background-color: var(--global-card-bg-color);
  border: 1px solid var(--global-divider-color);
}

.recognition-card:hover {
  box-shadow: 0 8px 16px rgba(0,0,0,0.15);
}

.award-section {
  margin-bottom: 3rem;
}

.award-header {
  border-bottom: 2px solid var(--global-theme-color);
  padding-bottom: 0.5rem;
  margin-bottom: 2rem;
}

.award-title {
  color: var(--global-theme-color);
  font-weight: 600;
}

.award-date {
  color: var(--global-text-color-light);
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.award-description {
  color: var(--global-text-color);
  font-style: italic;
  margin-bottom: 0;
}

.recognition-caption {
  color: var(--global-text-color);
  font-size: 0.85rem;
  line-height: 1.3;
}

/* Dark mode specific adjustments */
html[data-theme="dark"] .recognition-card:hover {
  box-shadow: 0 8px 16px rgba(255,255,255,0.1);
}

.recognition-grid {
  columns: 3;
  column-gap: 1.5rem;
  margin-top: 1rem;
}

.recognition-card {
  margin-bottom: 1.5rem;
  break-inside: avoid;
  page-break-inside: avoid;
  height: fit-content;
  display: inline-block;
  width: 100%;
}

.recognition-card-no-image {
  margin-bottom: 1.5rem;
  break-inside: avoid;
  page-break-inside: avoid;
  height: fit-content;
  display: inline-block;
  width: 100%;
}

.year-section {
  margin-bottom: 3rem;
}

.year-header {
  text-align: right;
  margin-bottom: 0;
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--global-theme-color);
}

@media (max-width: 992px) {
  .recognition-grid {
    columns: 2;
    column-gap: 1rem;
  }
  
  .recognition-card,
  .recognition-card-no-image {
    margin-bottom: 1rem;
  }
}

@media (max-width: 768px) {
  .recognition-grid {
    columns: 2;
    column-gap: 1rem;
  }
  
  .recognition-photo {
    height: 200px;
  }
}

@media (max-width: 576px) {
  .recognition-grid {
    columns: 1;
    column-gap: 0;
  }
  
  .recognition-photo {
    height: 180px;
  }
}

/* Modal backdrop blur effect */
.modal-backdrop {
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

/* Enhanced modal styling */
.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

/* Dark mode modal styling */
html[data-theme="dark"] .modal-content {
  background: rgba(33, 37, 41, 0.95);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

html[data-theme="dark"] .modal-header {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

html[data-theme="dark"] .modal-title {
  color: var(--global-text-color);
}

html[data-theme="dark"] .btn-close {
  filter: invert(1);
}
</style>

<!-- Page content (from markdown) -->
{{ content }}

<!-- Recognition display -->
<div class="recognition-container">
  {% comment %} Create a hash to group items by individual years {% endcomment %}
  {% assign years_hash = '' | split: ',' %}
  {% assign year_items = '' | split: ',' %}
  
  {% comment %} First pass: collect all unique years {% endcomment %}
  {% assign all_years = '' | split: ',' %}
  {% for item in site.data.recognition %}
    {% if item.year and item.year != '' %}
      {% assign item_years = item.year | split: ', ' %}
      {% for year in item_years %}
        {% assign year = year | strip %}
        {% unless all_years contains year %}
          {% assign all_years = all_years | push: year %}
        {% endunless %}
      {% endfor %}
    {% endif %}
  {% endfor %}
  
  {% comment %} Sort years in descending order {% endcomment %}
  {% assign sorted_years = all_years | sort | reverse %}
  
  {% comment %} Display items grouped by year {% endcomment %}
  {% for year in sorted_years %}
    {% assign year_items = '' | split: ',' %}
    
    {% comment %} Collect items for this year {% endcomment %}
    {% for item in site.data.recognition %}
      {% if item.year and item.year != '' %}
        {% assign item_years = item.year | split: ', ' %}
        {% for item_year in item_years %}
          {% assign item_year = item_year | strip %}
          {% if item_year == year %}
            {% assign year_items = year_items | push: item %}
            {% break %}
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endfor %}
    
    {% if year_items.size > 0 %}
      <div class="year-section">
        <h2 class="year-header">{{ year }}</h2>
        <hr>
        <div class="recognition-grid">
          {% assign sorted_items = year_items | sort: "name" %}
          {% for item in sorted_items %}
            {% if item.image %}
              <div class="card recognition-card h-100">
                <div class="position-relative overflow-hidden">
                  <img src="{{ item.image | relative_url }}" 
                       class="card-img-top recognition-photo" 
                       alt="{{ item.name }} - {{ item.award }}"
                       loading="lazy">
                </div>
            {% else %}
              <div class="card recognition-card recognition-card-no-image">
            {% endif %}
              <div class="card-body d-flex flex-column">
                {% if item.url %}
                  <h6 class="card-title mb-1 text-primary">
                    <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.name }}</a>
                  </h6>
                {% else %}
                  <h6 class="card-title mb-1 text-primary">{{ item.name }}</h6>
                {% endif %}
                <p class="recognition-caption card-text flex-grow-1">{{ item.award }}</p>
                {% if item.co_inventors %}
                  <small class="text-muted mb-2">Co-inventors: {{ item.co_inventors }}</small>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
  
  {% comment %} Handle items without years {% endcomment %}
  {% assign no_year_items = '' | split: ',' %}
  {% for item in site.data.recognition %}
    {% if item.year == '' or item.year == nil %}
      {% assign no_year_items = no_year_items | push: item %}
    {% endif %}
  {% endfor %}
  
  {% if no_year_items.size > 0 %}
    <div class="year-section">
      <h2 class="year-header">Other</h2>
      <hr>
      <div class="recognition-grid">
        {% assign sorted_items = no_year_items | sort: "name" %}
        {% for item in sorted_items %}
          {% if item.image %}
            <div class="card recognition-card h-100">
              <div class="position-relative overflow-hidden">
                <img src="{{ item.image | relative_url }}" 
                     class="card-img-top recognition-photo" 
                     alt="{{ item.name }} - {{ item.award }}"
                     loading="lazy">
              </div>
          {% else %}
            <div class="card recognition-card recognition-card-no-image">
          {% endif %}
            <div class="card-body d-flex flex-column">
              {% if item.url %}
                <h6 class="card-title mb-1 text-primary">
                  <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">{{ item.name }}</a>
                </h6>
              {% else %}
                <h6 class="card-title mb-1 text-primary">{{ item.name }}</h6>
              {% endif %}
              <p class="recognition-caption card-text flex-grow-1">{{ item.award }}</p>
              {% if item.co_inventors %}
                <small class="text-muted mb-2">Co-inventors: {{ item.co_inventors }}</small>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
  
  {% if site.data.recognition.size == 0 %}
    <div class="text-center py-5">
      <div class="alert alert-secondary">
        <i class="fas fa-award"></i>
        <h4>No recognition recorded yet</h4>
        <p>Check back soon for updates on our achievements!</p>
      </div>
    </div>
  {% endif %}
</div>

<!-- Optional: Add modal for full-size image viewing -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">Recognition</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" data-mdb-dismiss="modal" aria-label="Close" id="recognitionModalCloseBtn"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalImage" src="" class="img-fluid" alt="">
        <p id="modalCaption" class="mt-2 text-muted"></p>
      </div>
    </div>
  </div>
</div>

<script>
// Add click handlers for image modal (optional enhancement)
document.addEventListener('DOMContentLoaded', function() {
  const recognitionPhotos = document.querySelectorAll('.recognition-photo');
  const modal = new bootstrap.Modal(document.getElementById('imageModal'));
  const modalImage = document.getElementById('modalImage');
  const modalCaption = document.getElementById('modalCaption');
  
  recognitionPhotos.forEach(function(photo) {
    photo.addEventListener('click', function() {
      modalImage.src = this.src;
      modalImage.alt = this.alt;
      modalCaption.textContent = this.alt;
      
      // Show modal and enhance backdrop
      modal.show();
      
      // Enhance backdrop blur after modal is shown
      setTimeout(() => {
        const backdrop = document.querySelector('.modal-backdrop');
        if (backdrop) {
          backdrop.style.backdropFilter = 'blur(10px)';
          backdrop.style.webkitBackdropFilter = 'blur(10px)';
        }
      }, 100);
    });
    
    // Add pointer cursor to indicate clickability
    photo.style.cursor = 'pointer';
  });
  
  // Ensure close button works with both Bootstrap and MDB
  const closeBtn = document.getElementById('recognitionModalCloseBtn');
  if (closeBtn) {
    closeBtn.addEventListener('click', function() {
      modal.hide();
    });
  }
  
  // Also handle ESC key and backdrop clicks
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      modal.hide();
    }
  });
  
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('imageModal').classList.contains('show')) {
      modal.hide();
    }
  });
});
</script>