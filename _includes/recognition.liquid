<div class="recognition">
  <div class="container-md">
    <h3 class="mb-4">Awards</h3>
    <div class="awards-grid">
      {%- assign awards = site.data.recognition | where: "category", "Award" -%}
      {%- assign sorted_awards = awards | sort: "year" | reverse -%}
      {%- for award in sorted_awards -%}
      <div class="award-card">
        <div class="award-content">
          {% if award.url %}
            <h6 class="mb-1 text-primary">
              <a href="{{ award.url }}" target="_blank" rel="noopener noreferrer">{{ award.name }}</a>
            </h6>
          {% else %}
            <h6 class="mb-1 text-primary">{{ award.name }}</h6>
          {% endif %}
          <p class="mb-1">{{ award.award }}</p>
          {% if award.co_inventors %}
            <small class="text-muted">Co-inventors: {{ award.co_inventors }}</small>
          {% endif %}
          {% if award.image %}
          <div class="award-image">
            <img src="{{ award.image | relative_url }}" alt="{{ award.name }}" loading="lazy">
          </div>
          {% endif %}
        </div>
        {% if award.year %}
        <div class="award-year">
          <small class="text-muted">{{ award.year }}</small>
        </div>
        {% endif %}
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
.awards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 1.5rem;
  align-items: start;
}

.award-card {
  display: flex;
  flex-direction: column;
  background-color: var(--card-bg, #f9f9f9);
  padding: 1rem;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  min-height: fit-content;
}

.award-image {
  margin-top: 1rem;
  margin-bottom: 0.5rem;
  text-align: center;
  flex-shrink: 0;
}

.award-image img {
  max-width: 100%;
  max-height: 150px;
  height: auto;
  border-radius: 6px;
  object-fit: contain;
}

.award-content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  text-align: left;
}

.award-year {
  margin-top: auto;
  padding-top: 0.5rem;
  text-align: left;
}

/* Ensure consistent spacing regardless of image presence */
.award-content > *:last-child {
  margin-bottom: 0;
}

/* Dynamic spacing for cards with and without images */
.award-card:not(:has(.award-image)) .award-content {
  justify-content: space-between;
}

/* Alternative for browsers that don't support :has() */
@supports not (selector(:has(*))) {
  .award-card {
    min-height: 200px;
  }
}

/* Dark mode compatibility */
html[data-theme="dark"] .award-card {
  background-color: #1e1e1e;
  color: #e0e0e0;
  box-shadow: 0 2px 6px rgba(255,255,255,0.05);
}

html[data-theme="dark"] .text-muted {
  color: #aaa !important;
}

html[data-theme="dark"] .text-primary a {
  color: #90caf9 !important;
}

html[data-theme="dark"] a:hover {
  color: #ffffff;
}

</style>