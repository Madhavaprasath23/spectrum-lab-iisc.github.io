<div class="recognition">
  <div class="container-md">
    <!-- Awards Section -->
    <div class="row">
      <div class="col-md-6">
        <h3 class="mb-3">Awards</h3>
        <div class="list-group">
          {%- assign awards = site.data.recognition | where: "category", "Award" -%}
          {%- assign sorted_awards = awards | sort: "year" | reverse -%}
          {%- for award in sorted_awards -%}
          <div class="list-group-item border-0 px-0 py-2">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                {%- if award.url -%}
                <h6 class="mb-1 text-primary"><a href="{{ award.url }}" target="_blank" rel="noopener noreferrer">{{ award.name }}</a></h6>
                {%- else -%}
                <h6 class="mb-1 text-primary">{{ award.name }}</h6>
                {%- endif -%}
                <p class="mb-1">{{ award.award }}</p>
                {%- if award.co_inventors -%}
                <small class="text-muted">Co-inventors: {{ award.co_inventors }}</small>
                {%- endif -%}
              </div>
              {%- if award.year != "" -%}
              <small class="text-muted">{{ award.year }}</small>
              {%- endif -%}
            </div>
          </div>
          {%- endfor -%}
        </div>
      </div>
      
      <!-- Fellowships Section -->
      <div class="col-md-6">
        <h3 class="mb-3">Fellowships</h3>
        <div class="list-group">
          {%- assign fellowships = site.data.recognition | where: "category", "Fellowship" -%}
          {%- assign sorted_fellowships = fellowships | sort: "year" | reverse -%}
          {%- for fellowship in sorted_fellowships -%}
          <div class="list-group-item border-0 px-0 py-2">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                {%- if fellowship.url -%}
                <h6 class="mb-1 text-primary"><a href="{{ fellowship.url }}" target="_blank" rel="noopener noreferrer">{{ fellowship.name }}</a></h6>
                {%- else -%}
                <h6 class="mb-1 text-primary">{{ fellowship.name }}</h6>
                {%- endif -%}
                <p class="mb-1">{{ fellowship.award }}</p>
              </div>
              {%- if fellowship.year != "" -%}
              <small class="text-muted">{{ fellowship.year }}</small>
              {%- endif -%}
            </div>
          </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>
